---
// src/layouts/Layout.astro
import { translations } from '../i18n/ui'; // Çevirileri import et
import type { UIStrings } from '../i18n/ui'; // Tip tanımını import et

export interface Props {
    title: string;
    description?: string;
    keywords?: string;
    meta?: {
        [key: string]: any;
    };
    lang: string; // Hangi dilde olduğunu söyleyen prop
}

const { title, description, keywords, meta = {}, lang } = Astro.props;

// Mevcut dil için çevirileri al
const t = translations[lang] || translations.en; // Eğer dil bulunamazsa İngilizce'ye fallback yap

// hreflang için linkleri oluştur
const alternateLinks = Object.keys(translations).map(locale => ({
  lang: locale,
  url: locale === 'en' ? '/' : `/${locale}/`
}));

const metaDescription = description || "Illuminate your future with Virtual Tarot. Explore the mysteries of Tarot cards. Download for free on Android and iOS.";
const metaKeywords = keywords || "tarot, virtual tarot, tarot cards, tarot reading, divination, fortune telling";
---

<!DOCTYPE html>
<html lang={lang}>
<head>
    <meta charset="UTF-8">
    <meta name="description" content={metaDescription} />
    <meta name="keywords" content={metaKeywords} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="author" content="Virtual Tarot Team" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={metaDescription} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:image" content="https://virtualtarotapp.com/images/og-default.jpg" />
    <meta property="og:site_name" content="Virtual Tarot" />
    
    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={metaDescription} />
    <meta name="twitter:image" content="https://virtualtarotapp.com/images/og-default.jpg" />
    
    <!-- Additional Meta Tags -->
    <meta name="theme-color" content="#4a148c" />
    <meta name="robots" content="index, follow" />
    
    <title>{title}</title>
    
    <!-- HREFLANG ETİKETLERİ -->
    <link rel="alternate" hreflang="x-default" href="https://virtualtarotapp.com" />
    {alternateLinks.map(link => (
        <link rel="alternate" hreflang={link.lang} href={`https://virtualtarotapp.com${link.url}`} />
    ))}
    
    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "Virtual Tarot",
        "url": "https://virtualtarotapp.com",
        "description": metaDescription,
        "potentialAction": {
            "@type": "SearchAction",
            "target": "https://virtualtarotapp.com/search?q={search_term_string}",
            "query-input": "required name=search_term_string"
        },
        "inLanguage": lang
    })}></script>
</head>
<body>
    <header>
        <div class="header-content">
            <a href="/" class="logo">Virtual Tarot</a>
            <nav>
                <a href={`/${lang}/features`}>{t.nav.features}</a>
                <a href={`/${lang}/cards`}>{t.nav.cardMeanings}</a>
                <a href={`/${lang}/blog`}>{t.nav.blog}</a>
            </nav>
        </div>
    </header>
    <main>
        <slot /> <!-- Sayfanın içeriği buraya gelecek -->
    </main>
    <footer>
        <p>{t.footer.copyright}</p>
        <div class="footer-links">
            <a href="/privacy-policy">{t.footer.privacyPolicy}</a>
            <a href="/terms-of-use">Terms of Use</a>
        </div>
    </footer>
</body>
</html>

<style is:global>
    :root {
        --primary-color: #4a148c;
        --secondary-color: #7b1fa2;
        --text-color: #333;
        --light-bg-color: #f7f4ff;
        --white-color: #ffffff;
        --max-width: 1200px;
    }
    
    body {
        margin: 0;
        font-family: sans-serif;
        background-color: var(--white-color);
        color: var(--text-color);
        line-height: 1.6;
    }
    
    header {
        background: var(--white-color);
        padding: 1rem 2rem;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        position: sticky;
        top: 0;
        z-index: 100;
    }
    
    .header-content {
        max-width: var(--max-width);
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    
    .logo {
        font-size: 1.5rem;
        font-weight: bold;
        color: var(--primary-color);
        text-decoration: none;
    }
    
    nav a {
        color: var(--text-color);
        text-decoration: none;
        margin-left: 1.5rem;
        font-weight: 500;
        transition: color 0.2s ease-in-out;
    }
    
    nav a:hover {
        color: var(--primary-color);
    }
    
    footer {
        background: var(--text-color);
        color: var(--light-bg-color);
        text-align: center;
        padding: 1.5rem;
        margin-top: 2rem;
    }
    
    .footer-links {
        margin-top: 1rem;
    }
    
    footer a {
        color: var(--light-bg-color);
        margin: 0 0.5rem;
        text-decoration: none;
        transition: opacity 0.2s ease-in-out;
    }
    
    footer a:hover {
        opacity: 0.8;
    }
</style>